{
  "name": "@news-map/backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "validate-config": "node ../../scripts/validate-llm-config.js",
    "start:validated": "npm run validate-config && npm run start",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:all": "tsx src/__tests__/test-runner.ts all",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:integration": "vitest run src/__tests__/integration/**/*.test.ts",
    "test:models": "vitest run src/models/**/*.test.ts",
    "test:routes": "vitest run src/routes/**/*.test.ts",
    "test:services": "vitest run src/services/**/*.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:coverage-html": "vitest run --coverage --reporter=html",
    "test:api-docs": "echo 'API documentation validation would go here'",
    "test:db": "tsx src/test-db.ts",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "db:init": "tsx scripts/setup-db.ts init",
    "db:reset": "tsx scripts/setup-db.ts reset",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "express": "^4.18.0",
    "@types/express": "^4.17.0",
    "cors": "^2.8.0",
    "@types/cors": "^2.8.0",
    "helmet": "^6.0.0",
    "compression": "^1.7.0",
    "@types/compression": "^1.7.0",
    "jsonwebtoken": "^9.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.0",
    "@types/bcrypt": "^5.0.0",
    "socket.io": "^4.6.0",
    "pg": "^8.9.0",
    "@types/pg": "^8.6.0",
    "knex": "^2.4.0",
    "redis": "^4.6.0",
    "axios": "^1.3.0",
    "node-cron": "^3.0.0",
    "@types/node-cron": "^3.0.0",
    "winston": "^3.8.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.14.0",
    "dotenv": "^16.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tsx": "^3.12.0",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.0",
    "artillery": "^2.0.0",
    "nodemon": "^2.0.0"
  }
}