# Interactive World News Map - Standalone Deployment Configuration
# Copy this file to .env and customize for your deployment

# Database Configuration
POSTGRES_DB=news_map_db
POSTGRES_USER=news_map_user
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=change_this_secure_password
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=change-this-to-a-very-secure-secret-at-least-32-characters
JWT_EXPIRES_IN=24h

# External API Keys (Required)
NEWS_API_KEY=your-news-api-key
GUARDIAN_API_KEY=your-guardian-api-key
GEOCODING_API_KEY=your-geocoding-api-key

# LLM Provider Configuration
# Choose your primary provider: openai, grok, or ollama
BIAS_ANALYSIS_PROVIDER=openai
# Configure fallback providers (comma-separated)
BIAS_ANALYSIS_FALLBACK_PROVIDERS=openai,ollama

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=30000
OPENAI_MAX_RETRIES=3
OPENAI_RATE_LIMIT=60

# Grok Configuration (if using Grok)
GROK_API_KEY=your-grok-api-key
GROK_MODEL=grok-beta
GROK_BASE_URL=https://api.x.ai/v1
GROK_TIMEOUT=30000
GROK_MAX_RETRIES=3
GROK_RATE_LIMIT=60

# Ollama Configuration (if using local Ollama)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2:7b
OLLAMA_TIMEOUT=60000
OLLAMA_MAX_RETRIES=2
OLLAMA_RATE_LIMIT=30
OLLAMA_PORT=11434

# LLM Health Check Configuration
LLM_HEALTH_CHECK_INTERVAL=300000
LLM_ENABLE_FAILOVER=true

# Server Configuration
LOG_LEVEL=info
CORS_ORIGIN=http://localhost

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Service Ports
HTTP_PORT=80
HTTPS_PORT=443
BACKEND_PORT=3001
FRONTEND_PORT=3000

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001